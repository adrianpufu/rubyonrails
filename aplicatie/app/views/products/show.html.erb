<p>
  <strong>Name:</strong>
  <%= @channel.name %>
</p>
 
<h2>Add a product:</h2>
<%= form_for([@channel, @channel.products.build]) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :active %><br>
    <%= f.text_field :active %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
 
<%= link_to 'Back', channels_path %>